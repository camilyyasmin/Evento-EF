@model EventosEF.Models.Inscricao

@{
    ViewData["Title"] = "Create";
}

<h1>Inscrição</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataInscricao" class="control-label"></label>
                <input asp-for="DataInscricao" class="form-control" />
                <span asp-validation-for="DataInscricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventoId" class="control-label"></label>
                <select asp-for="EventoId" class ="form-control" asp-items="ViewBag.EventoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ParticipanteId" class="control-label"></label>
                <select asp-for="ParticipanteId" class ="form-control" asp-items="ViewBag.ParticipanteId"></select>
            </div> <br />
            <div class="form-group">
                <input type="submit" class="cor2" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div> <br />
    <a class="cor1" asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
